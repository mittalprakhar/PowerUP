    <VBox fx:id="container">
        <Pane fx:id="grid" />
    </VBox>
    <VBox fx:id="sideMenu">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label text="Hey Defender!">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label text="Money">
             <font>
                <Font size="18.0" />
             </font>
        </Label>
        <!-- Button -->
    </VBox>
